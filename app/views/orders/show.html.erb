<% @page_title = "Show Order" %>

<%= link_to("<< Back to Orders List", orders_path, :class => 'back-link') %>

<div>
  <h2>Show Order</h2>

  <table>
    <tr class="header">
      <th>Product name</th>
      <th>Quantity</th>
      <th>Unit Price</th>
      <th>Total Line Price</th>
      <% if @order.date==nil %>
          <th>Actions</th>
      <% end %>
    </tr>
    <% @order.lines.each do |line| %>
        <tr>
          <td><%= line.product.name %></td>
          <td><%= line.qty %></td>
          <td><%= line.unit_price %></td>
          <td><%= line.total_price %></td>
          <td>
          <% if @order.date==nil %>
              <%= link_to("Edit", edit_product_line_path(line.product_id,line)) %>
              <%= link_to("Delete" , product_line_path(line.product_id,line),
                          method: :delete,
                          data: { confirm: 'Are you sure?' }) %>
          <% end %>
          </td>
        </tr>
    <% end %>
  </table>
  <div>Total:<%= @order.total %></div>
</div>
