<style>.error{
    color:red;
}</style>
<%= form_for [@line.product, @line], remote: true do |f|   %>
    <table>
      <tr>
        <th></th>
        <td><%= f.hidden_field(:product_id,:value=>@line.product.id) %></td>
      </tr>
      <tr>
        <th><labe>Product Name</labe></th>
        <td><input type="text" value=<%= @line.product.name %> readonly /></td>
      </tr>
      <tr>
        <th><%= f.label(:qty, "Quantity") %></th>
        <td><%= f.text_field(:qty) %><div class="error"></div></td>
      </tr>
    </table>
    <div class="form-buttons">
      <%= submit_tag("ADD") %>
    </div>
<% end %>